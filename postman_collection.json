{
  "info": {
    "name": "Papyrus API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Root",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}",
          "host": ["{{baseUrl}}"]
        }
      }
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password\",\n  \"name\": \"Test User\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "refresh"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "logout"]
        }
      }
    },
    {
      "name": "Create Group",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"My Group\",\n  \"description\": \"Test\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/groups",
          "host": ["{{baseUrl}}"],
          "path": ["groups"]
        }
      }
    },
    {
      "name": "List Groups",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/groups",
          "host": ["{{baseUrl}}"],
          "path": ["groups"]
        }
      }
    },
    {
      "name": "Add Group Member",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/groups/:groupId/memberships/:userId",
          "host": ["{{baseUrl}}"],
          "path": ["groups", ":groupId", "memberships", ":userId"]
        }
      }
    }
  ],
  "variable": [{ "key": "baseUrl", "value": "http://localhost:8080" }]
}
